<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@mipmap/fondo"
    tools:context=".AsociarDispositivoATanque">

    <!-- TÍTULO PRINCIPAL -->
    <TextView
        android:id="@+id/tvTituloAsociar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asociar Dispositivo a Tanque"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO TANQUES -->
    <TextView
        android:id="@+id/tvTanques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el tanque:"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloAsociar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- SPINNER TANQUES -->
    <Spinner
        android:id="@+id/spnTanques"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTanques"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO DISPOSITIVOS -->
    <TextView
        android:id="@+id/tvDispositivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el dispositivo:"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/spnTanques"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- SPINNER DISPOSITIVOS -->
    <Spinner
        android:id="@+id/spnDispositivos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDispositivos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÓN ASOCIAR -->
    <Button
        android:id="@+id/btnAsociar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Asociar Dispositivo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginTop="36dp"
        android:background="#00796B"
        app:layout_constraintTop_toBottomOf="@id/spnDispositivos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
