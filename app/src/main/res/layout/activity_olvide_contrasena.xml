<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@mipmap/fondo"
    tools:context=".OlvideContrasenaActivity">

    <ImageView
        android:id="@+id/imgOlvide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/usuario"
        android:contentDescription="Icono"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTituloOlvide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar contraseña"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgOlvide"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubOlvide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingresa tu correo y te enviaremos un enlace para restablecer la contraseña."
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvTituloOlvide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etEmailOlvide"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginTop="18dp"
        android:background="@color/transparente"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:drawablePadding="12dp"
        android:textColorHint="#777777"
        app:layout_constraintTop_toBottomOf="@id/tvSubOlvide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar enlace"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:onClick="sendResetPassword"
        app:layout_constraintTop_toBottomOf="@id/etEmailOlvide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCancelarOlvide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:background="@android:color/transparent"
        android:textColor="#1976D2"
        android:onClick="cancelReset"
        app:layout_constraintTop_toBottomOf="@id/btnEnviar"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
