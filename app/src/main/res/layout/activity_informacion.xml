<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context=".Informacion">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEditar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/datosPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/transparente">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Nombre Tanque de agua"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCapasidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:text="Capacidad Volumétrica"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:text="Color"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Dirección (opcional)"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="12dp" />

            <!-- ============================
                 SENSOR pH
            ============================ -->
            <TextView
                android:id="@+id/txtPh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="pH: No disponible"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPhEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado pH..."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingBottom="6dp" />

            <!-- ============================
                 SENSOR CONDUCTIVIDAD
            ============================ -->
            <TextView
                android:id="@+id/txtConductividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="Conductividad: No disponible"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCondEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado conductividad..."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingBottom="6dp" />

            <!-- ============================
                 SENSOR TURBIDEZ
            ============================ -->
            <TextView
                android:id="@+id/txtTurbidez"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="Turbidez: No disponible"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTurbEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado turbidez..."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingBottom="6dp" />

            <!-- ============================
                 SENSOR ULTRASÓNICO (NIVEL)
            ============================ -->
            <TextView
                android:id="@+id/txtSonico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="Ultrasónico: No disponible"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtUltraEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado nivel..."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingBottom="10dp" />

            <!-- ============================
                 GRÁFICO EN TIEMPO REAL
            ============================ -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/sensorChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/verde"
        android:onClick="editarTanque"
        android:text="Editar"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnEliminar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#D91E18"
        android:onClick="confirmarEliminar"
        android:text="Eliminar"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnVolver2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVolver2"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#E11B1B"
        android:onClick="Volver2"
        android:text="Volver"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
