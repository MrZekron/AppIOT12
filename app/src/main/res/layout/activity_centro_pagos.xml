<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@mipmap/fondo"
    tools:context=".CentroPagos">

    <!-- ðŸ§¾ TÃTULO -->
    <TextView
        android:id="@+id/tvTituloPagos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centro de Pagos"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- ðŸŸ¦ TARJETA DE INFORMACIÃ“N DEL USUARIO -->
    <LinearLayout
        android:id="@+id/cardUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPagos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvUsuarioPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario: correo@correo.com"
            android:textSize="16sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tvResumenDeuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deuda total: $0"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:textColor="#000"/>

    </LinearLayout>


    <!-- ðŸ“‹ LISTA DE PAGOS -->
    <ListView
        android:id="@+id/listPagos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:dividerHeight="10dp"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardUsuario"
        app:layout_constraintBottom_toTopOf="@id/layoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"/>


    <!-- ðŸŸ© BOTONES DE ACCIÃ“N EN 2 COLUMNAS -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ”¹ PAGAR CUOTA -->
        <Button
            android:id="@+id/btnPagarCuota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pagar Cuota"
            android:textColor="@android:color/white"
            android:background="#1976D2"
            android:padding="12dp"/>

        <View
            android:layout_width="12dp"
            android:layout_height="0dp"/>

        <!-- ðŸ”¹ PAGAR COMPLETO -->
        <Button
            android:id="@+id/btnPagarTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pagar Total"
            android:textColor="@android:color/white"
            android:background="#D32F2F"
            android:padding="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
