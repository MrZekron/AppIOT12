<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context=".Menu">

    <!-- NAV SUPERIOR -->
    <LinearLayout
        android:id="@+id/navCuenta"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#33000000"
        android:onClick="abrirConfiguracion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivUsuario"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Usuario" />

        <TextView
            android:id="@+id/tvCorreoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="correo@ejemplo.com"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú"
        android:textSize="48sp"
        android:textColor="#000"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/navCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ========================== -->
    <!--      CUADRÍCULA 2×2        -->
    <!-- ========================== -->

    <!-- FILA 1 BOTÓN: LISTA -->
    <Button
        android:id="@+id/btnLista"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="Lista"
        android:textColor="#fff"
        android:background="#1E88E5"
        android:onClick="lista"
        android:textSize="18sp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAgregar"/>

    <!-- FILA 1 BOTÓN: AGREGAR -->
    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="Agregar"
        android:textColor="#fff"
        android:background="#43A047"
        android:onClick="agregar"
        android:textSize="18sp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toEndOf="@id/btnLista"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FILA 2 BOTÓN: MIS PAGOS -->
    <Button
        android:id="@+id/btnPagosUsuario"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="Mis Pagos"
        android:textColor="#fff"
        android:background="#00796B"
        android:onClick="pagos"
        android:textSize="18sp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnLista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnComprarDispositivo"/>

    <!-- FILA 2 BOTÓN: COMPRAR DISPOSITIVO -->
    <Button
        android:id="@+id/btnComprarDispositivo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="Comprar Dispositivo"
        android:textColor="#fff"
        android:onClick="comprarDispositivo"
        android:textSize="18sp"
        android:background="#303F9F"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAgregar"
        app:layout_constraintStart_toEndOf="@id/btnPagosUsuario"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FILA 3 BOTÓN: ASOCIAR -->
    <Button
        android:id="@+id/btnAsociarDispositivo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="Asociar Dispositivo"
        android:textColor="#fff"
        android:background="#6A1B9A"
        android:onClick="asociarDispositivo"
        android:textSize="18sp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnPagosUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCentroPagos"/>

    <!-- FILA 3 BOTÓN: CENTRO DE PAGOS -->
    <Button
        android:id="@+id/btnCentroPagos"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="Centro de Pagos"
        android:textColor="#fff"
        android:background="#00838F"
        android:onClick="centroPagos"
        android:textSize="18sp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnComprarDispositivo"
        app:layout_constraintStart_toEndOf="@id/btnAsociarDispositivo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FILA FINAL: SALIR (CENTRADO) -->
    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="#A33D60"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCentroPagos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
