<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Correo del usuario -->
    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="correo@correo.cl"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnBloquear"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Estado de la cuenta -->
    <TextView
        android:id="@+id/tvEstadoCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: activa"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCorreo" />

    <!-- Estado financiero del usuario -->
    <TextView
        android:id="@+id/tvDeuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagos al día"
        android:textSize="14sp"
        android:textColor="#2E7D32"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEstadoCuenta"/>

    <!-- Botón bloquear/desbloquear -->
    <Button
        android:id="@+id/btnBloquear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bloquear"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
