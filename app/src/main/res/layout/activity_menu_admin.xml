<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@mipmap/fondo"
    tools:context=".MenuAdmin">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTituloAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel Administrador"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÓN: Gestionar usuarios -->
    <Button
        android:id="@+id/btnGestionUsuarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestionar Usuarios"
        android:textColor="@android:color/white"
        android:background="#303F9F"
        android:padding="12dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÓN: Ver todos los tanques -->
    <Button
        android:id="@+id/btnTanquesGlobales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Tanques de Todos"
        android:textColor="@android:color/white"
        android:background="#1976D2"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGestionUsuarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÓN: Historial -->
    <Button
        android:id="@+id/btnHistorialAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Historial Global"
        android:textColor="@android:color/white"
        android:background="#0288D1"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTanquesGlobales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÓN: Configuración -->
    <Button
        android:id="@+id/btnConfigAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:textColor="@android:color/white"
        android:background="#0097A7"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnHistorialAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÓN: Cerrar sesión -->
    <Button
        android:id="@+id/btnCerrarSesionAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textColor="@android:color/white"
        android:background="#D32F2F"
        android:padding="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnConfigAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
