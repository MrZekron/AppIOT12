<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context=".GestionUsuarios">

    <!-- ========================= -->
    <!-- ðŸ“Œ TÃTULO -->
    <!-- ========================= -->
    <TextView
        android:id="@+id/tvTituloUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n de Usuarios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================= -->
    <!-- ðŸŽ› BOTÃ“N FILTROS -->
    <!-- ========================= -->
    <Button
        android:id="@+id/btnFiltrarUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar usuarios"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:background="#455A64"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloUsuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ========================= -->
    <!-- ðŸ“‹ LISTA DE USUARIOS -->
    <!-- ========================= -->
    <ListView
        android:id="@+id/listUsuarios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:dividerHeight="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnFiltrarUsuarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnVolver" />

    <!-- ========================= -->
    <!-- ðŸ”™ BOTÃ“N VOLVER -->
    <!-- ========================= -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:background="#A33D60"
        android:onClick="volver"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
